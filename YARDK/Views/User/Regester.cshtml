@model YARDK.Models.RegisterViewModel
@{
    ViewData["Title"] = "Regesteration";
	Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YARDK - Regestration Page</title>
    <link rel="stylesheet" type="text/css" href="slide navbar style.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css">
    <style>
        .main {
            position: relative;
        }
        .signup {
            position: relative;
            width: 100%;
            height: 100%;
        }
        .login {
            position: absolute;
            width: 100%;
            height: 100%;
            background: rgba(20,20,20, .8);
            top: 0;
            left: 0;
            z-index: -1;
            transition: all .5s ease;
            opacity: 0;
        }
        #chk:checked ~ .signup {
            transform: translateY(-500px);
            opacity: 0;
            z-index: -1;
        }
        #chk:checked ~ .login {
            opacity: 1;
            z-index: 1;
        }
    </style>
</head>

<body class="body09">
    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">

        <div class="signup">
            <form asp-action="Regester" method="post">
                <label for="chk" aria-hidden="true">Sign up</label>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input asp-for="Name" placeholder="User name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
                
                <input asp-for="Email" placeholder="Email (e.g., yardk@example.com)" required>
                <span asp-validation-for="Email" class="text-danger"></span>
                
                <input asp-for="Phone" placeholder="Phone Number (e.g., 07XXXXXXXX)" required>
                <span asp-validation-for="Phone" class="text-danger"></span>
                
                <input asp-for="Password" placeholder="Password (e.g., 12345678$Sn)" required>
                <span asp-validation-for="Password" class="text-danger"></span>
                
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                
                <button type="submit">Sign up</button>
                <p style="color:whitesmoke">Already have an account? <a asp-action="Login" style="cursor:pointer;color:#FE9D01;font-size:14px;">Login here</a></p>
            </form>
        </div>

        <div class="login">
            <form asp-action="Login" asp-controller="User" method="post">
                <label for="chk" aria-hidden="true">Login</label>
                <input type="email" name="Email" placeholder="Email" required>
                <input type="password" name="Password" placeholder="Password" required>
                <button type="submit">Login</button>
                <p>Don't have an account? <label for="chk" style="cursor:pointer;color:#009688;font-size:14px;">Register here</label></p>
            </form>
        </div>
    </div>

    <a asp-controller="Home" asp-action="Index" class="home-button"> <i class='fas fa-home'></i> </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>