@model YARDK.Models.RegisterViewModel
@{
    ViewData["Title"] = "Regesteration";
	Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YARDK - Regestration Page</title>
    <link rel="stylesheet" type="text/css" href="slide navbar style.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css">
    <style>
        .main {
            position: relative;
            width: 450px;
            background: rgba(0, 47, 95, 0.9);
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
            margin: 0 auto;
            overflow: visible;
        }
        .signup {
            position: relative;
            width: 100%;
            height: auto;
            padding: 20px 0;
        }
        .login {
            position: absolute;
            width: 100%;
            height: 100%;
            background: rgba(20,20,20, .8);
            top: 0;
            left: 0;
            z-index: -1;
            transition: all .5s ease;
            opacity: 0;
        }
        #chk:checked ~ .signup {
            transform: translateY(-500px);
            opacity: 0;
            z-index: -1;
        }
        #chk:checked ~ .login {
            opacity: 1;
            z-index: 1;
        }
        
        /* Form input styling */
        form input {
            width: 80%;
            height: 35px;
            margin: 8px auto;
            padding: 8px;
        }
        
        /* Form element distribution */
        form label {
            font-size: 1.8em;
            margin: 15px 0;
        }
        
        form button {
            margin-top: 15px;
            margin-bottom: 10px;
        }
        
        /* Error message styling */
        .error-message {
            display: block;
            font-size: 12px;
            font-weight: 400;
            width: 80%;
            margin: -5px auto 5px;
            background-color: rgba(0,0,0,0.3);
            padding: 2px 10px;
            border-radius: 3px;
            text-align: left;
            color: #ff5c5c;
        }
        
        .validation-summary {
            width: 80%;
            margin: 0 auto 10px;
            font-size: 13px;
            background-color: rgba(0,0,0,0.3);
            padding: 8px;
            border-radius: 5px;
            text-align: left;
        }
        
        .validation-summary ul {
            padding-left: 20px;
            margin-bottom: 0;
        }
        
        /* Home button styling */
        .home-button {
            position: fixed;
            top: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #32A12E;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
            text-decoration: none;
            box-shadow: 0 2px 5px rgba(0,0,0,0.3);
            transition: background-color 0.3s ease;
        }
        
        .home-button:hover {
            background-color: #236820;
        }
        
        /* Responsive styling */
        body.body09 {
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
    </style>
</head>

<body class="body09">
    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">

        <div class="signup">
            <form asp-action="Regester" method="post">
                <label for="chk" aria-hidden="true">Sign up</label>
                <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>
                
                <input asp-for="Name" placeholder="User name" required>
                <span asp-validation-for="Name" class="text-danger error-message"></span>
                
                <input asp-for="Email" placeholder="Email (e.g., yardk@example.com)" required>
                <span asp-validation-for="Email" class="text-danger error-message"></span>
                
                <input asp-for="Phone" placeholder="Phone Number (e.g., 07XXXXXXXX)" required>
                <span asp-validation-for="Phone" class="text-danger error-message"></span>
                
                <input asp-for="Password" placeholder="Password (e.g., 12345678$Sn)" required>
                <span asp-validation-for="Password" class="text-danger error-message"></span>
                
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger error-message"></span>
                
                <button type="submit">Sign up</button>
                <p style="color:whitesmoke">Already have an account? <a asp-action="Login" style="cursor:pointer;color:#FE9D01;font-size:14px;">Login here</a></p>
            </form>
        </div>

        <div class="login">
            <form asp-action="Login" asp-controller="User" method="post">
                <label for="chk" aria-hidden="true">Login</label>
                <input type="email" name="Email" placeholder="Email" required>
                <input type="password" name="Password" placeholder="Password" required>
                <button type="submit">Login</button>
                <p>Don't have an account? <label for="chk" style="cursor:pointer;color:#009688;font-size:14px;">Register here</label></p>
            </form>
        </div>
    </div>

    <a asp-controller="Home" asp-action="Index" class="home-button"> <i class='fas fa-home'></i> </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>