@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    @* <title>YARDK - Home Page</title> *@
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Poppins:wght@200;300;400;500;600&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
	<header>
		<!-- Spinner Start -->
		<div id="spinner"
			 class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
			<div class="spinner-border text-secondary" style="width: 3rem; height: 3rem;" role="status">
				<span class="sr-only">Loading...</span>
			</div>
		</div>
		<!-- Spinner End -->
		<!-- Navbar & Hero Start -->
		<div class="container-fluid nav-bar p-0">
			<nav class="navbar navbar-expand-lg navbar-light bg-white px-4 px-lg-5 py-3 py-lg-0">
				<a href="" class="navbar-brand p-0">
					<h1 class="display-5 text-secondary m-0">
						<img src="~/img/logoIcon-removebg-preview.png" class="img-fluid"
							 alt="">YARDK
					</h1>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
					<span class="fa fa-bars"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarCollapse">
					<div class="navbar-nav ms-auto py-0">
						<a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Home</a>
						<a class="nav-item nav-link" asp-controller="Home" asp-action="About">About</a>
						<div class="nav-item dropdown">
							<a asp-controller="Product" asp-action="Categories" class="nav-link" data-bs-toggle="dropdown">
								<span class="dropdown-toggle" asp-controller="#" asp-action="#">Categories</span>
							</a>
							<div class="dropdown-menu m-0">
								<a class="dropdown-item" asp-controller="Product" asp-action="Electrical_Appliances">Electrical Appliances</a>
								<a class="dropdown-item" asp-controller="Product" asp-action="Furniture">Furniture</a>
								<a class="dropdown-item" asp-controller="Product" asp-action="Scrap_Surplus">Scrap & Surplus</a>
							</div>
						</div>
						<a class="nav-item nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
					</div>
					<button class="btn btn-primary btn-md-square border-secondary mb-3 mb-md-3 mb-lg-0 me-3"
							data-bs-toggle="modal" data-bs-target="#searchModal">
						<i class="fas fa-search"></i>
					</button>

					<a class="btn btn-primary btn-md-square border-secondary mb-3 mb-md-3 mb-lg-0 me-3" asp-controller="Product" asp-action="Cart">
						<i class="fas fa-shopping-cart"></i>
					</a>

					@if (Context.Request.Cookies["UserId"] != null)
					{
						<div class="nav-item dropdown">
							<a href="#" class="btn btn-primary border-secondary rounded-pill py-2 px-4 px-lg-3 mb-3 mb-md-3 mb-lg-0" data-bs-toggle="dropdown">
								<i class="fas fa-user me-2"></i>@Context.Request.Cookies["UserName"]
							</a>
							<div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
								@if (Context.Request.Cookies["UserRole"] != null && Context.Request.Cookies["UserRole"] == "Admin")
								{
									<a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
									<a class="dropdown-item" asp-controller="Admin" asp-action="Categories">Manage Categories</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item" href="@Url.Action("Logout", "User")">Logout</a>
								}
								else
								{
									<a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile</a>
									<a class="dropdown-item" asp-controller="User" asp-action="MyAds" >My Ads</a>
									<a class="dropdown-item" asp-controller="User" asp-action="MyOrders" >My Orders</a>
									<a class="dropdown-item" asp-controller="User" asp-action="PaymentMethod">Payment Method</a>
								<div class="dropdown-divider"></div>
									<a class="dropdown-item" href="@Url.Action("Logout", "User")">Logout</a>
								}
							</div>
						</div>
					}
					else
					{
						<a class="btn btn-primary border-secondary rounded-pill py-2 px-4 px-lg-3 mb-3 mb-md-3 mb-lg-0" asp-controller="User" asp-action="Login">Login</a>
					}
				</div>
			</nav>
		</div>
		<!-- Navbar & Hero End -->
	</header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

	<!-- Footer Start -->
	<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
		<div class="container py-5">
			<div class="row g-5">
				<div class="col-md-6 col-lg-6 col-xl-3">
					<img src="~/img/logo-removebg-preview.png" alt="">
					<div class="footer-item">
						<div class="position-relative mx-auto rounded-pill">
							<input class="form-control border-0 rounded-pill w-100 py-3 ps-4 pe-5" type="text"
								   placeholder="Search here ...">
							<button type="button"
									class="btn btn-primary rounded-pill position-absolute top-0 end-0 py-2 mt-2 me-2">
								<i class="fas fa-search"></i>
							</button>
						</div>
					</div>
				</div>

				<div class="col-md-6 col-lg-6 col-xl-3">
					<div class="footer-item d-flex flex-column">
						<h4 class="text-secondary mb-4">Our Services</h4>
						<a href="#" class=""><i class="fas fa-angle-right me-2"></i> Home</a>
						<a href="#" class=""><i class="fas fa-angle-right me-2"></i> Electrical Appliances</a>
						<a href="#" class=""><i class="fas fa-angle-right me-2"></i> Furniture</a>
						<a href="#" class=""><i class="fas fa-angle-right me-2"></i> Scrap & Surplus</a>
						<a href="#" class=""><i class="fas fa-angle-right me-2"></i> About Us</a>
						<a href="#" class=""><i class="fas fa-angle-right me-2"></i> Contact Us</a>
					</div>
				</div>
				<div class="col-md-6 col-lg-6 col-xl-3">
					<div class="footer-item d-flex flex-column">
						<h4 class="text-secondary mb-4">Offices Opening Time</h4>
						<div class="mb-3">
							<h6 class="text-muted mb-0">Sun - Thu:</h6>
							<p class="text-white mb-0">09.00 am to 07.00 pm</p>
						</div>
						<div class="mb-3">
							<h6 class="text-muted mb-0">Satday:</h6>
							<p class="text-white mb-0">10.00 am to 05.00 pm</p>
						</div>
						<div class="mb-3">
							<h6 class="text-muted mb-0">Vacation:</h6>
							<p class="text-white mb-0">All Friday is our vacation</p>
						</div>
					</div>
				</div>
				<div class="col-md-6 col-lg-6 col-xl-3">
					<div class="footer-item d-flex flex-column">
						<h4 class="text-secondary mb-4">Contact Info</h4>
						<a href=""><i class="fa fa-map-marker-alt me-2"></i>Jordan Amman - Mecca St.</a>
						<a href=""><i class="fas fa-envelope me-2"></i> yadrk@info.com</a>
						<a href=""><i class="fas fa-phone me-2"></i>+962 797 265-279</a>
						<div class="d-flex align-items-center">
							<i class="fas fa-share fa-2x text-secondary me-2"></i>
							<a class="btn mx-1" href=""><i class="fab fa-facebook-f"></i></a>
							<a class="btn mx-1" href=""><i class="fab fa-twitter"></i></a>
							<a class="btn mx-1" href=""><i class="fab fa-instagram"></i></a>
							<a class="btn mx-1" href=""><i class="fab fa-linkedin-in"></i></a>
						</div>
					</div>
				</div>
				<span class="text-white copycenter">
					<a href="#" class="border-bottom text-white">
						<i class="fas fa-copyright text-light me-2"></i>YARDK
					</a>, All right reserved.
				</span>
			</div>
		</div>
	</div>
	<!-- Footer End -->
	<!-- Back to Top -->
	<a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>


	<!-- JavaScript Libraries -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/wow/wow.min.js"></script>
	<script src="~/lib/easing/easing.min.js"></script>
	<script src="~/lib/waypoints/waypoints.min.js"></script>
	<script src="~/lib/counterup/counterup.min.js"></script>
	<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>


	<!-- Template Javascript -->
	<script src="~/js/main.js"></script>
    
    <!-- تضمين قسم Scripts الذي يتم تحديده في الصفحات الفرعية -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
