@model List<YARDK.Models.Category>
@{
    ViewData["Title"] = "YARDK-Home";
}

<!-- Carousel Start -->
<div class="carousel-header">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="img/hero000.jpg" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                    <div class="text-center p-4 cen" style="max-width: 900px;">
                        <h4 class="text-white text-uppercase fw-bold mb-3 mb-md-4 wow fadeInUp"
                            data-wow-delay="0.1s">
                            Solution For All Type Of Scrap
                        </h4>
                        <h1 class="display-1 text-capitalize text-white mb-3 mb-md-4 wow fadeInUp"
                            data-wow-delay="0.3s">
                            Transforming Surplus into Success
                        </h1>
                        <p class="text-white mb-4 mb-md-5 fs-5 wow fadeInUp d-none d-sm-block" data-wow-delay="0.5s">
                            We give surplus
                            and scrap a second chance, transforming
                            unused items into valuable resources while supporting businesses and sustainability
                        </p>
                        <a class="btn btn-primary border-secondary rounded-pill text-white py-3 px-5 wow fadeInUp"
                           data-wow-delay="0.7s" asp-action="About" >More Details</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/hero000111.jpg" class="img-fluid sof" alt="Image">
                <div class="carousel-caption">
                    <div class="text-center p-4 cen" style="max-width: 900px;">
                        <h5 class="text-white text-uppercase fw-bold mb-3 mb-md-4 wow fadeInUp"
                            data-wow-delay="0.1s">
                            Solution For All Type Of Scrap
                        </h5>
                        <h1 class="display-1 text-capitalize text-white mb-3 mb-md-4 wow fadeInUp"
                            data-wow-delay="0.3s">
                            From Waste to Worth: Redefining Value
                        </h1>
                        <p class="text-white mb-4 mb-md-5 fs-5 wow fadeInUp d-none d-sm-block" data-wow-delay="0.5s">
                            We bring surplus
                            items, appliances, and unused furniture
                            back to life, transforming them into valuable opportunities for everyone.
                        </p>
                        <a class="btn btn-primary border-secondary rounded-pill text-white py-3 px-5 wow fadeInUp"
                           data-wow-delay="0.7s" asp-action="About" >More Details</a>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-secondary wow fadeInLeft" data-wow-delay="0.2s"
                  aria-hidden="false"></span>
            <span class="visually-hidden-focusable">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-secondary wow fadeInRight" data-wow-delay="0.2s"
                  aria-hidden="false"></span>
            <span class="visually-hidden-focusable">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->

<!-- Add responsive styles to fix mobile view -->
<style>
    @@media (max-width: 576px) {
        .carousel-caption {
            top: auto !important;
            bottom: 0 !important;
            padding-top: 80px !important;
        }
        
        .carousel-item {
            height: 100vh;
        }
        
        .carousel-item img {
            height: 100%;
            object-fit: cover;
        }
        
        .carousel-caption h1 {
            font-size: 2rem !important;
        }
        
        .carousel-caption h4, 
        .carousel-caption h5 {
            font-size: 1rem !important;
        }
        
        .carousel-caption .btn {
            padding: 0.5rem 1.5rem !important;
            font-size: 0.9rem !important;
        }
    }
</style>


