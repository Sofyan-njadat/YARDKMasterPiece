@model YARDK.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        <h2 class="mt-4">Thank You for Your Order!</h2>
        <p class="lead">Your order has been placed successfully.</p>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order #@Model.OrderNumber</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6>Order Details</h6>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Order Date:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                                <p><strong>Order Status:</strong> <span class="badge bg-warning">@Model.Status</span></p>
                                <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Total:</strong> JD @Model.TotalAmount.ToString("F2")</p>
                                <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h6>Order Items</h6>
                        <hr>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.Product?.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>JD @item.UnitPrice.ToString("F2")</td>
                                            <td>JD @item.TotalPrice.ToString("F2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <a href="@Url.Action("Categories", "Product")" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 