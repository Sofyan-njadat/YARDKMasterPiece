@model YARDK.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-edit me-2"></i>
                        <span class="en-text">Edit Category</span>
                        <span class="ar-text d-none">تعديل الفئة</span>
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditCategory" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CategoryName" class="form-control" placeholder="Category Name" required />
                                    <label asp-for="CategoryName">
                                        <span class="en-text">Category Name</span>
                                        <span class="ar-text d-none">اسم الفئة</span>
                                    </label>
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                    <div class="invalid-feedback">
                                        <span class="en-text">Please enter a category name.</span>
                                        <span class="ar-text d-none">يرجى إدخال اسم الفئة.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <span class="en-text">Category Image</span>
                                        <span class="ar-text d-none">صورة الفئة</span>
                                    </label>
                                    <input type="file" name="categoryImage" class="form-control image-preview-input" 
                                           data-preview="#imagePreview" accept="image/*" />
                                    <small class="form-text text-muted">
                                        <span class="en-text">Leave empty to keep the current image.</span>
                                        <span class="ar-text d-none">اتركه فارغاً للإبقاء على الصورة الحالية.</span>
                                    </small>
                                </div>
                                <div class="mb-3 text-center">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img id="imagePreview" src="@Model.ImageUrl" alt="Current Image" class="img-thumbnail mt-2" 
                                             style="max-height: 200px;" />
                                    }
                                    else
                                    {
                                        <img id="imagePreview" src="#" alt="Image Preview" class="img-thumbnail mt-2" 
                                             style="max-height: 200px; display: none;" />
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control" placeholder="Description" 
                                          style="height: 100px;"></textarea>
                                <label asp-for="Description">
                                    <span class="en-text">Description</span>
                                    <span class="ar-text d-none">الوصف</span>
                                </label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Categories" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                <span class="en-text">Back to List</span>
                                <span class="ar-text d-none">العودة إلى القائمة</span>
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                <span class="en-text">Update</span>
                                <span class="ar-text d-none">تحديث</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 